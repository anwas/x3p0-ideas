		"typography": {
			"fontFamilies": [
				{
					"fontFamily": "\"Dancing Script\", \"Segoe Print\", \"Bradley Hand\", Chilanka, TSCu_Comic, casual, cursive",
					"slug": "primary",
					"name": "Primary (Oswald)",
					"fontFace": [
						{
							"fontFamily": "Dancing Script",
							"fontWeight": "400 700",
							"fontStyle": "normal",
							"fontStretch": "normal",
							"src": [ "file:./public/fonts/dancing-script/dancing-script.woff2" ]
						}
					]
				},
				{
					"fontFamily": "Inter, Roboto, 'Helvetica Neue', 'Arial Nova', 'Nimbus Sans', Arial, sans-serif",
					"slug": "secondary",
					"name": "Secondary (Cabin)"
				},
				{
					"fontFamily": "Didot, 'Bodoni MT', 'Noto Serif Display', 'URW Palladio L', P052, Sylfaen, serif",
					"slug": "tertiary",
					"name": "Tertiary (Didone)"
				},
				{
					"fontFamily": "\"Source Code Pro\", Monaco, Consolas, \"Andale Mono WT\", \"Andale Mono\", \"Lucida Console\", \"Lucida Sans Typewriter\", \"DejaVu Sans Mono\", \"Bitstream Vera Sans Mono\", \"Liberation Mono\", \"Nimbus Mono L\", \"Courier New\", Courier, monospace",
					"slug": "mono",
					"name": "Monospace"
				},
				{
					"fontFamily": "'Dancing Script', \"Segoe Print\", \"Bradley Hand\", Chilanka, TSCu_Comic, casual, cursive",
					"slug": "handwriting",
					"name": "Handwriting"
				}
			]
		}
	},
	"styles": {
		"color": {
			"gradient": "linear-gradient( 360deg, #322a3d 0%, transparent 100% )"
		},
		"elements": {
			"button": {
				"color": {
					"background": "var( --wp--preset--color--contrast )",
					"text": "var( --wp--preset--color--shades-50 )"
				}
			},
			"caption": {
				"typography": {
					"fontFamily": "var( --wp--preset--font-family--secondary )"
				}
			},
			"cite": {
				"color": {
					"text": "inherit"
				},
				"typography": {
					"fontFamily": "var( --wp--preset--font-family--secondary )",
					"fontWeight": "600",
					"fontStyle": "normal"
				}
			},
			"link": {
				"color": {
					"text": "var:preset|color|accent-600"
				}
			}
		},
		"blocks": {
			"core/code": {
				"color": {
					"background": "var:preset|color|shades-100",
					"text": "var:preset|color|contrast"
				},
				"border": {
					"width": "0",
					"left": {
						"width": "var:preset|spacing|10",
						"style": "solid",
						"color": "var:preset|color|contrast"
					}
				}
			},
			"core/comment-template": {
				"css": "& > li { padding: var( --wp--preset--spacing--80 ); background-color: var( --wp--preset--color--shades-100 ); }"
			},
			"core/file": {
				"color": {
					"background": "var( --wp--preset--color--shades-100 )"
				}
			},
			"core/list-item": {
				"css": "&::marker { color: var( --wp--preset--color--shades-600 ); }"
			},
			"core/paragraph": {
				"css": "&.has-drop-cap:not(:focus)::first-letter { font-family: var( --wp--preset--font-family--tertiary ); }"
			},
			"core/pullquote": {
				"border": {
					"top": {
						"color": "var( --wp--preset--color--contrast )"
					},
					"bottom": {
						"color": "var( --wp--preset--color--contrast )"
					}
				}
			},
			"core/quote": {
				"border": {
					"left": {
						"color": "var( --wp--preset--color--contrast )"
					}
				}
			},
			"core/separator": {
				"color": {
					"text": "var:preset|color|contrast"
				}
			}
		}
	}
}
