{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 2,
	"title": "Statement",
	"settings": {
		"custom": {
			"colorVar": {
				"light": {
					"text": "var( --wp--preset--color--contrast )",
					"background": "var( --wp--preset--color--shades-100 )"
				},
				"dark": {
					"text": "var( --wp--preset--color--white )",
					"background": "var( --wp--preset--color--contrast )"
				},
				"accent": {
					"text": "var( --wp--preset--color--accent-700 )",
					"background": "var( --wp--preset--color--accent-50 )",
					"link": "var( --wp--preset--color--accent-700 )"
				}
			},
			"elements": {
				"code": {
					"background": "var( --wp--preset--color--shades-100 )"
				},
				"kbd": {
					"background": "var( --wp--preset--color--shades-100 )",
					"border": "1px solid var( --wp--preset--color--shades-400 )"
				},
				"formInput": {
					"background": "var( --wp--preset--color--shades-100 )",
					"border": "1px solid var( --wp--preset--color--contrast )"
				}
			},
			"blocks": {
				"navigation-submenu": {
					"color": "var( --wp--preset--color--contrast )",
					"background": "var( --wp--preset--color--base )",
					"border": "4px solid var( --wp--preset--color--contrast )",
					"link-color": "inherit",
					"link-background": "inherit",
					"link-hover-color": "inherit",
					"link-hover-background": "var( --wp--preset--color--shades-100 )"
				}
			}
		},
