{
	"$schema": "https://raw.githubusercontent.com/WordPress/gutenberg/trunk/schemas/json/theme.json",
	"version": 3,
	"title": "Buttons: Primary",
	"slug": "buttons-primary",
	"blockTypes": [
		"core/post-terms",
		"core/tag-cloud"
	],
	"styles": {
		"typography": {
			"fontSize": { "ref": "styles.elements.button.typography.fontSize" },
			"fontWeight": { "ref": "styles.elements.button.typography.fontWeight" }
		},
		"elements": {
			"link": {
				"border": {
					"radius": "var:custom|global|border|radius"
				},
				"color": {
					"background": { "ref": "styles.elements.button.color.background" },
					"text": { "ref": "styles.elements.button.color.text" }
				},
				"shadow": "var:preset|shadow|md",
				"spacing": {
					"padding": {
						"top": { "ref": "styles.elements.button.spacing.padding.top" },
						"bottom": { "ref": "styles.elements.button.spacing.padding.bottom" },
						"left": { "ref": "styles.elements.button.spacing.padding.left" },
						"right": { "ref": "styles.elements.button.spacing.padding.right" }
					}
				},
				"typography": {
					"fontSize": "inherit !important",
					"fontWeight": "inherit !important",
					"lineHeight": { "ref": "styles.elements.button.typography.lineHeight" },
					"textDecoration": "none"
				},
				":focus": {
					"color": {
						"background": { "ref": "styles.elements.button.:focus.color.background" },
						"text": { "ref": "styles.elements.button.:focus.color.text" }
					},
					"typography": {
						"textDecoration": "underline"
					}
				},
				":hover": {
					"color": {
						"background": { "ref": "styles.elements.button.:hover.color.background" },
						"text": { "ref": "styles.elements.button.:hover.color.text" }
					},
					"typography": {
						"textDecoration": "underline"
					}
				}
			}
		}
	}
}
