{
	"name": "x3p0-dev/x3p0-ideas",
	"type": "wordpress-theme",
	"license": "GPL-3.0-or-later",
	"scripts": {
		"build": [
			"composer prod",
			"composer zip"
		],
		"dev": [
			"composer update",
			"composer dump-autoload"
		],
		"prod": [
			"composer var:none",
			"composer update --no-dev",
			"composer dump-autoload -o --no-dev"
		],
		"lint:php": "./vendor/bin/phpcs -s --colors .",
		"zip": "composer archive --file=x3p0-ideas",
		"var:none": "composer config extra.x3p0.variation \"\"",
		"var:default": "composer config extra.x3p0.variation \"default\"",
		"var:bookish": "composer config extra.x3p0.variation \"a-little-bit-bookish\""
	},
	"extra": {
		"x3p0": {
			"variation": ""
		}
	},
	"autoload": {
		"psr-4": {
			"X3P0\\Ideas\\": "src/"
		},
		"files" : [
			"src/functions-helpers.php"
		],
		"exclude-from-classmap": [
			"/vendor/composer/"
		]
	},
	"autoload-dev": {
		"psr-4": {
			"X3P0\\Ideas\\Tests\\": "tests/"
		},
		"files" : [
			"tests/bootstrap.php",
			"tests/functions-helpers.php"
		]
	},
	"require": {
                "php": ">=7.4"
	},
	"require-dev": {
		"wp-coding-standards/wpcs": "^3.0",
		"phpcompatibility/phpcompatibility-wp": "*"
	},
	"minimum-stability": "stable",
	"prefer-stable": true,
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		},
		"archive-dir": "./_playground",
		"archive-format": "zip"
	},
	"archive": {
		"exclude": [
			"/vendor",
			"!/vendor/autoload.php",
			"!/vendor/composer/"
		]
	},
	"authors": [
		{
			"name": "Justin Tadlock",
			"email": "justintadlock@gmail.com"
		}
	]
}
